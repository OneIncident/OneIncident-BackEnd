<%-include ('../partials/header.ejs')%>
    <%-include ('../partials/main_nav.ejs')%>

<main class="container">
<!-- Message Area-->
<% if(messages.length > 0) {%>
    <div class="alert alert-danger">
        <%=messages %>
    </div>

<% } %>
<div class="row">
    <div class="offset md 4 col-md-4">
        <h1>PLease Login</h1>
        <form method="POST"   autocomplete="off">
            <fieldset class="form-group">
                <label for="username">Username:</label> 
                    <input class="form-control" type="text" name= "username" placeholder="Enter user name" id="username" required autofocus >
                </fieldset>
            
                <fieldset class="form-group">
                    <label for="password">Password:</label> 
                        <input class="form-control" type="password" name= "password" placeholder="Enter the password" id="password" required  >

                        or 
                        <a href="/register">Register Here</a>
                    </fieldset>

                    <fieldset class="form-group text-right">
                        <input type="submit" class="btn btn-success" value="Login">
                        <a href="/" class="btn btn-warning">
                            <input type="button" class="btn btn-warning" value="Cancel">
                        </a>
                    </fieldset>
        </form>


    </div>
</div>  

</main>
    
    <%-include ('../partials/bottom_nav.ejs')%>
    <%-include ('../partials/footer.ejs')%>